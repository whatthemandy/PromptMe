<h2>home</h2>
<h3>prompts:</h3>

<!-- list all prompts on homepage -->
<ul class="no-bullets">
<% @prompts.order(created_at: :asc).each do |prompt| %>

<table>

  <div id="toggle"><tr><td><img class="avatar" src="https://api.adorable.io/avatars/285/<%= prompt.user.username %>%40adorable.io" alt="avatar"></td></div>

  <!-- if user has deleted post, do not link to profile -->
  <% if prompt.user == deleted_user %>
    <td class="posted-by">posted by: <i>deleted</i><br>
      (<%= prompt.stories.count %>) stories</td>
  <% else %>
    <td class="posted-by">posted by: <a href="/users/<%= prompt.user_id %>"><%= prompt.user.username %></a><br>
      (<%= prompt.stories.count %>) stories</td>
  <% end %>
  <td class="prompt-idea"><a href="/prompts/<%= prompt.id %>"><%= prompt.idea %></a></td></tr>
</table>


<% end %>
</ul>
<!-- if user is logged in, display link to add new prompt -->
<br><br><br>
<% if logged_in? %>
  <div><a class="button-link" href="/prompts/new">create new prompt</a></div>
<% else %>

<!-- if user is not logged in, show link to log in -->
<div><a class="button-link" href="/login">log in to write your story</a></div>
<% end %>
